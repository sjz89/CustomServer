<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/send_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="3dp"
        android:gravity="center"
        android:textColor="@color/grey_400"
        android:textIsSelectable="false"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/Header_To"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/send_time"
        android:layout_margin="8dp"
        android:contentDescription="@string/empty"/>

    <com.bielang.customserver.view.BubbleTextView
        android:id="@+id/To_Content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="36dp"
        android:padding="8dp"
        android:layout_toStartOf="@+id/Header_To"
        android:layout_below="@id/send_time"
        android:autoLink="all"
        android:minWidth="32dp"
        android:minHeight="36dp"
        android:contentDescription="@string/empty"
        android:gravity="start"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        app:bubbleDirection="right"
        app:bubbleArrowHeight="6dp"
        app:bubbleArrowWidth="8dp"
        app:bubbleBackGround="@color/blue"
        app:bubbleArrowWhetherCenterVertical="false"/>

</RelativeLayout>