<?xml version="1.0" encoding="utf-8"?>
<com.github.library.bubbleview.BubbleLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:arrowLocation="bottom"
    app:arrowPosition="38dp"
    app:bubbleColor="@color/grey_650">

    <TextView
        android:id="@+id/popup_search"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="14dp"
        android:text="@string/search"
        android:textColor="@android:color/white"
        android:textSize="15sp"/>

    <View
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/popup_copy"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="14dp"
        android:text="@string/copy"
        android:textColor="@android:color/white"
        android:textSize="15sp"/>

</com.github.library.bubbleview.BubbleLinearLayout>